<h2><%= t('.sign_up', :default => "Sign up") %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :nombre %><br />
  <%= f.text_field :nombre %></div>

  <div><%= f.label :apellido %><br />
  <%= f.text_field :apellido %></div>

  <div><%= f.label :dni %><br />
  <%= f.text_field :dni %></div>

  <div><%= f.label :fecha_de_nacimiento %><br />
  <%= f.date_field :fecha_nac %></div>

  <div><%= f.label :fecha_de_vencimiento_de_licencia_conducir %><br />
  <%= f.date_field :fecha_ven %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit t('.sign_up', :default => "Sign up") %></div>
<% end %>

<%= render "devise/shared/links" %>
